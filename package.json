{
  "name": "ts-node-sample",
  "version": "0.0.1",
  "description": "TypeScript/Node Application",
  "scripts": {
    "start": "tsc -p tsconfig.json && babel-node ts-server-build/index.js",
    "test": "jest --verbose",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier '{{src}/**/,./}*.{ts,tsx,js}' --write"
  },
  "main": "index.js",
  "repository": "git@github.com:edwarddamato/ts-node-sample.git",
  "author": "D'Amato, Edward <info@edwarddamato.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.1",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/node": "8",
    "@types/node-fetch": "^1.6.9",
    "awesome-typescript-loader": "^3.4.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.2.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.18.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.3.0",
    "node-fetch": "^2.1.2",
    "prettier": "^1.10.2",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "tslint-config-prettier": "^1.8.0",
    "tslint-eslint-rules": "^5.0.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^13.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "parser": "typescript"
  }
}
